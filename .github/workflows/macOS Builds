name: macOS Builds

on:
  push:
    branches: [ "main" ]
    tags:
      - "v*"

jobs:
  build-macos:
    runs-on: macos-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          pip install pyinstaller wxPython

      - name: Build .app
        run: |
          pyinstaller \
            --windowed \
            --name Apnetso \
            apnetso.py

      - name: Create .pkg
        run: |
          mkdir -p pkgroot/Applications
          cp -R dist/Apnetso.app pkgroot/Applications/

          pkgbuild \
            --root pkgroot \
            --identifier com.apnetso.app \
            --version 1.0.0 \
            Apnetso.pkg

      - name: Upload PKG
        uses: actions/upload-artifact@v4
        with:
          name: Apnetso-macOS-pkg
          path: Apnetso.pkg
